<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_help"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.example.miha.ep_trgovina_android.UserDataActivity">

    <EditText
        android:id="@+id/ime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Prej se prijavi" />

    <EditText
        android:id="@+id/priimek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
         />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/priimek"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/naslov"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_below="@+id/email" />

    <EditText
        android:id="@+id/tel_stevilka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/naslov"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp" />

    <EditText
        android:id="@+id/staro_geslo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tel_stevilka"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/novo_geslo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/staro_geslo"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/novo_geslo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/novo_geslo"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"/>

    <TextView
        android:id="@+id/tv_ime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/priimek"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="Ime:" />

    <TextView
        android:id="@+id/tv_priimek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/priimek"
        android:layout_alignLeft="@+id/tv_ime"
        android:layout_marginBottom="10dp"
        android:text="Priimek:" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/email"
        android:layout_alignLeft="@+id/tv_priimek"
        android:layout_marginBottom="10dp"
        android:text="Email:" />

    <TextView
        android:id="@+id/tv_naslov"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_email"
        android:layout_alignBottom="@+id/naslov"
        android:text="Naslov:" />

    <TextView
        android:id="@+id/tv_tel_stevilka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_naslov"
        android:layout_alignBottom="@+id/tel_stevilka"
        android:layout_marginBottom="10dp"
        android:text="Tel. st.:" />

    <Button
        android:id="@+id/posodobi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Posodobi" />

    <TextView
        android:id="@+id/tv_staro_geslo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/novo_geslo"
        android:layout_alignLeft="@+id/tv_tel_stevilka"
        android:layout_alignStart="@+id/tv_tel_stevilka"
        android:text="Staro geslo:" />

    <TextView
        android:id="@+id/tv_novo_geslo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/novo_geslo2"
        android:layout_alignEnd="@+id/tv_staro_geslo"
        android:layout_alignRight="@+id/tv_staro_geslo"
        android:layout_marginBottom="11dp"
        android:text="Novo geslo:" />

    <TextView
        android:id="@+id/tv_novo_geslo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_novo_geslo"
        android:layout_alignStart="@+id/tv_novo_geslo"
        android:layout_below="@+id/tv_novo_geslo"
        android:layout_marginTop="11dp"
        android:text="Potrditev gesla:" />


</RelativeLayout>
